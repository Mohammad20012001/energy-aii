# متغيرات بيئية للمشروع Energy.AI
# انسخ هذا الملف إلى ملف .env وقم بتعديل القيم

# Groq API Configuration (الأساسي)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# منفذ تشغيل الخادم
FRONTEND_PORT=3000
BACKEND_PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/energy-ai
MONGODB_PASSWORD=your_mongodb_password_here

# تكوين المصادقة
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=24h

# تكوين قاعدة البيانات
DB_URI=mongodb://localhost:27017/energy_ai
DB_USER=your_database_user
DB_PASS=your_database_password

# بيئة التشغيل (development أو production)
NODE_ENV=development

# إعدادات CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# إعدادات SMTP (لإرسال البريد الإلكتروني)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=no-reply@example.com